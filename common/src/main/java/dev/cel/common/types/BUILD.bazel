# Collection of CEL type implementations and type-inference related classes.

# keep sorted
CEL_TYPE_SOURCES = [
    "EnumType.java",
    "ListType.java",
    "MapType.java",
    "NullableType.java",
    "OpaqueType.java",
    "ProtoMessageType.java",
    "SimpleType.java",
    "StructType.java",
    "StructTypeReference.java",
    "TypeParamType.java",
    "TypeType.java",
]

