package(default_visibility = [
    "//:__subpackages__",
    "//common/src/main/java/dev/cel/common/ast:__pkg__",
])

# keep sorted
AST_SOURCES = [
    "CelConstant.java",
    "CelExpr.java",
    "CelReference.java",
]

