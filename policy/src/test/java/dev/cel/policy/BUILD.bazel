    name = "tests",
    testonly = 1,
    srcs = glob(["*.java"]),
    resources = [
        "//policy/src/test/resources:policy_yaml_files",
    ],
    deps = [
        "//:java_truth",
        "//bundle:cel",
        "//common",
        "//common:options",
        "//extensions:optional_library",
        "//parser:macro",
        "//policy",
        "//policy:policy_compiler_factory",
        "//policy:policy_config",
        "//policy:policy_config_parser",
        "//policy:policy_exception",
        "//policy:policy_parser",
        "//policy:policy_parser_factory",
        "//policy:policy_source",
        "//policy:value_string",
        "//policy:yaml_policy_config_parser",
        "//policy:yaml_policy_parser",
        "@maven//:com_google_api_grpc_proto_google_common_protos",
